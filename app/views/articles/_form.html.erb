<h3>New article</h3>

<div class='row'>
  <%= form_for @article, class: 'col s12' do |f| %>
    <div class="row">
      <div class="input-field col s6">
        <%= f.text_field :title %>
        <%= f.label :title %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_area :content, class: 'materialize-textarea' %>
        <%= f.label :content %>
      </div>
    </div>
    <div class="row">
      <div class="col s12 actions">
        <%= f.submit 'Submit', class: 'waves-effect waves-light btn' %>
      </div>
    </div>
  <% end %>
</div>
