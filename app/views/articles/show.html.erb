<div class='row'>
  <div class='col s12'>
    <div class='card grey lighten-5 hoverable'>
      <div class='card-content'>
        <span class='card-title'><%= @article.title %></span>
        <p><%= @article.content %></p>
      </div>
      <div class='card-action'>
        <%= link_to "Author: #{@article.user.username}", user_path(@article.user) %>
        <%= link_to "#{@article.created_at.to_date}", articles_path %>
      </div>
    </div>
  </div>
</div>
